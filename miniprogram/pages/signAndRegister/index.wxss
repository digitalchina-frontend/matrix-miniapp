.container {

  background-size: 400vw 100vh;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 200rpx;
}



.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.btn {
  background: #1890FF !important;
  line-height: 80rpx !important;
  border-radius: 80rpx !important;
  margin: 70rpx  !important;
  font-size: 35rpx !important;
}

.avs {
  opacity: 0.9;
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  margin-bottom:60rpx;

}
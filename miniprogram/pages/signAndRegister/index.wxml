<view >
  <view  wx:if="{{!flag}}" class="content">
    <view>申请获取以下权限</view>
    <text>获得你的公开信息(昵称，头像、地区等)</text>
  </view>
  <view wx:else class='container'>
    <open-data class="avs" type="userAvatarUrl"></open-data>
    <view >
      <text  class='username'>Hello </text>
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <button wx:if="{{!flag}}" type="primary" class='btn' withCredentials="true" lang="zh_CN" open-type="getUserInfo" bindtap="login">
    授权登录
  </button>

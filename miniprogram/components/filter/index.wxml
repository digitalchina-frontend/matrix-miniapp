<!--components/filter/index.wxml-->
<view>
  <view class="mask" wx:if="{{activeKey}}" bindtap="closeSelect">
  </view>
  <view class="filter-container">
    <view wx:for="{{filters}}" wx:key="key">
      <view class="filter-item" bindtap="openSelect" data-key="{{item.key}}">
        <text class="name {{activeKey===item.key? 'active' : ''}}">{{params[item.key]|| item.name}}</text>
        <view class="arrow {{activeKey===item.key? 'active' : ''}}">â–²</view>
      </view>
      <view class="select-container" wx:if="{{activeKey===item.key}}">
        <view class="select-item {{params[item.key]===option? 'active' : ''}} " wx:for="{{item.options}}" wx:for-item="option" wx:key="option" bindtap="selectItem" data-key="{{item.key}}" data-item="{{option}}">
          {{option}}
        </view>
      </view>
    </view>
  </view>

</view>
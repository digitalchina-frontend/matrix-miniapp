.qrcode-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.qrcode-link {
  padding: 20rpx 30rpx;
  height: 400rpx;
  border-radius: 10rpx;
  width: 100%;
  background: #f5f5f5;
  text-align: center;
  box-sizing: border-box;
}
.title {
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
.link_url {
  color: #327bfa;
  text-decoration: underline;
  margin-top: 80rpx;
  margin-bottom: 70rpx;
  word-break: break-all;
  font-size: 28rpx;
}

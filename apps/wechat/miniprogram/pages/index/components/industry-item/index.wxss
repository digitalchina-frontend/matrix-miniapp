/* pages/index/components/industry-item/index.wxss */
.industry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  row-gap: 6rpx;
  width: 100%;
  height: 11.51vh;
  border-radius: 17rpx 17rpx 17rpx 17rpx;
}

.industry-item--blue {
  background: #f3f6fd;
}

.industry-item--yellow {
  background: #fef9ef;
}

.industry-item--green {
  background: #f1f9f7;
}

.industry-item--red {
  background: #fbf4f4;
}

.industry-item__icon {
  width: 96rpx;
  height: 96rpx;
}

.industry-item__text {
  font-size: 20rpx;
  font-family: PingFang SC-Regular, PingFang SC;
}
